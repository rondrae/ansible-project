pipeline {
    agent any

  stages {
    stage('SCM Checkout') {
      steps {
        script {
          git 'https://github.com/rondrae/ansible-project.git'
        }
      }
    }

    stage('Execute Ansible') {
      steps {
        script {
          ansiblePlaybook credentialsId: 'rondrae-jenkins-key', disableHostKeyChecking: true, installation: 'ansible', inventory: 'inventory/dev.yml', playbook: 'playbook/playbook.yml', vaultTmpPath: ''
        }
      }
    }

    // stage('Package') {
